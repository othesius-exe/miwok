<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toolsNs="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/word_image_view"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:scaleType="center"
        android:src="@mipmap/ic_launcher"
        android:background="@color/image_background_color"/>

    <LinearLayout
        android:id="@+id/word_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/list_item_height"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_view_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/text_left_padding"
            android:gravity="bottom"
            android:textStyle="bold"
            android:textSize="@dimen/text_size"
            android:paddingTop="@dimen/text_top_padding"
            android:textColor="@color/primary_text"
            toolsNs:text="@string/lutti" />

        <TextView
            android:id="@+id/list_view_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:paddingLeft="@dimen/text_left_padding"
            android:textSize="@dimen/text_size"
            android:textColor="@color/primary_text"
            toolsNs:text="@string/one" />
    </LinearLayout>

</LinearLayout>