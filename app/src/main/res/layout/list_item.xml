<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toolsNs="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/word_image_view"
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="@dimen/activity_vertical_margin"/>

    <TextView
        android:id="@+id/list_view_1"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_toRightOf="@+id/word_image_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        toolsNs:text="@string/lutti"/>
    <TextView
        android:id="@+id/list_view_2"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_toRightOf="@+id/word_image_view"
        android:layout_below="@+id/list_view_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        toolsNs:text="@string/one"/>

</RelativeLayout>